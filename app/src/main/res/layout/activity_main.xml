<?xml version="1.0"
    encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hywoman.myapplication.MainActivity">


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="123dp"
            android:gravity="center"
            android:layout_alignBottom="@+id/image"
            android:layout_alignStart="@+id/image"
            android:typeface="monospace"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="monthly best"
            android:textSize="45sp"
            android:textColor="#8C8CFF"
            android:textStyle="bold"
            />

    </FrameLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/book"
        android:layout_alignTop="@+id/image2"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/book2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="119dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/bt_tab1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:text="menu" />

        <Button
            android:id="@+id/bt_tab2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:text="home" />

        <Button
            android:id="@+id/bt_tab3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:text="join or login" />

        <Button
            android:id="@+id/bt_tab4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:text="mypage" />


    </LinearLayout>

    <EditText
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/image"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="price:11,700 won"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text2"
        android:layout_alignParentEnd="true"
        android:layout_weight="0.5"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="price:8,700 won"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/image" />/>

</RelativeLayout>